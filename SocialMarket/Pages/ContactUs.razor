@page "/contact"
@inherits ContactUsBase

<PageTitle PageTitleText="@PageTitleText"></PageTitle>

<section class="contact-area pb-100">
    <div class="container">
        <div class="section-title">
            <span class="sub-title">Get in Touch</span>
            <h2>Ready to Get Started?<span class="overlay"></span></h2>
            <p>Your email address will not be published. Required fields are marked *</p>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="contact-image" data-tilt>
                    <img src="/img/contact.png"
                         alt="image">
                    @*<img data-cfsrc="/img/contact.png" alt="image"
                             style="display:none;visibility:hidden;"><noscript>
                            <img src="/img/contact.png"
                                 alt="image">
                        </noscript>*@
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="contact-form">
                    <EditForm Model="@ContactusEmailModel" OnValidSubmit="SaveContactUs" id="contactForm">
                        <DataAnnotationsValidator />
                        <div class="row">
                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <InputText id="name" class="form-control" placeholder="Your name" required
                                               data-error="Please enter your name" @bind-Value="@ContactusEmailModel.Name">
                                    </InputText>                                    
                                    <div class="help-block with-errors">
                                        <ValidationMessage For="@(() => ContactusEmailModel.Name)"></ValidationMessage>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <InputText class="form-control" id="email" required
                                               data-error="Please enter your email" placeholder="Your email address" @bind-Value="@ContactusEmailModel.EmailAddress"></InputText>                                    
                                    <div class="help-block with-errors">
                                        <ValidationMessage For="@(() => ContactusEmailModel.EmailAddress)"></ValidationMessage>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <InputText id="phone_number" class="form-control" required data-error="Please enter your phone number"
                                               placeholder="Your phone number" @bind-Value="@ContactusEmailModel.PhoneNumber">

                                    </InputText>                                    
                                    <div class="help-block with-errors">
                                        <ValidationMessage For="@(() => ContactusEmailModel.PhoneNumber)"></ValidationMessage>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <InputTextArea  id="message" class="form-control" cols="30" rows="6"
                                                   required data-error="Please enter your message"
                                                   placeholder="Write your message..." @bind-Value="@ContactusEmailModel.Message"></InputTextArea>                                    
                                    <div class="help-block with-errors">
                                        <ValidationMessage For="@(() => ContactusEmailModel.Message)"></ValidationMessage>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <button type="submit" class="default-btn">Send Message</button>
                                <div id="msgSubmit" class="h3 text-center hidden"></div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</section>