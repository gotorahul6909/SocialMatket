@if (AllSocial == null)
{
    <div class="spinner"></div>
}
else
{
    <EditForm>
        <ul class="list-group">
            @foreach (var item in AllSocial)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.Name
                    &nbsp;
                    <button type="submit" class="btn btn-warning" id="@(item.Name)" name="provider" value="@(item.Name)" title="@(item.Name)">@(item.Name)</button>
                </li>
            }
        </ul>
    </EditForm>
}


